<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_gioHang"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF8B10"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    >

                    <ImageView
                        android:id="@+id/imgGHAnhSP"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cocktail" />

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="tittle"
                        android:textSize="19dp"
                        android:id="@+id/txtGHTenSP"/>
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="giÃ¡"
                        android:textSize="19dp"
                        android:id="@+id/txtGHGia"/>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnHGTru"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/minus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:padding="5sp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/edtGHSoLuong"/>

            <ImageView
                android:id="@+id/btnGHCong"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/plus" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>